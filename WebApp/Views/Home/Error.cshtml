@{
    var themeMode = Context.Request.Cookies["ThemeMode"] ?? "light";
    var isDark = (themeMode == "dark" ? true : false);
}

<section class="section error-section"> 
    <div class="content error-content">
        @if (isDark)
        {
            <img src="~/images/404_dark.svg" alt="error logo" class="img"/>
        }
        else
        {
            <img src="~/images/404.svg" alt="error logo" class="img"/>
        }
        <div class="text-wrapper">
            <h1 class="h1">Oooops!</h1>
            <p class="text-xl">The page you are looking for is not available.</p>
            <a class="btn-theme-s" asp-controller="Home" asp-action="Index"><i class="fa-regular fa-house"></i>Go to homepage</a>
        </div>
    </div>
</section>