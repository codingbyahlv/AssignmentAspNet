@{
    string parentView = ViewData["ViewName"]?.ToString()!;
}

<section class="@(parentView == "contact" ? "section breadcrumbs-section contact-bg" : "section breadcrumbs-section")">
    <div class="content">
        <i class="fa-sharp fa-regular fa-house breadcrumb"></i>
        <a class="breadcrumb" asp-controller="Home" asp-action="Index"></i>Home</a>
        <i class="fa-solid fa-chevrons-right breadcrumb"></i>
        @if (parentView == "courses")
        {
            <a class="" asp-controller="Courses" asp-action="Index">Courses</a>
        }
        @if (parentView == "contact")
        {
            <a class="" asp-controller="Home" asp-action="Contact">Contact</a>
        }
    </div>
</section>